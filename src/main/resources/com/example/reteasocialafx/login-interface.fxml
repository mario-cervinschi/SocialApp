<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.reteasocialafx.controller.LogInController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutY="50.0" text="Social App"
               style="-fx-font-size: 32; -fx-font-weight: bold;"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" alignment="CENTER" />
        <Label layoutY="130.0" text="Email" AnchorPane.leftAnchor="230.0" />
        <TextField layoutY="150" fx:id="email" AnchorPane.leftAnchor="230.0" AnchorPane.rightAnchor="230.0"/>
        <Label layoutY="200.0" text="Password" AnchorPane.leftAnchor="230.0" />
        <PasswordField layoutY="220" fx:id="password" AnchorPane.leftAnchor="230.0" AnchorPane.rightAnchor="230.0"/>
        <Button layoutY="280.0" fx:id="btnLogIn" mnemonicParsing="false" onAction="#onLogInButtonCLick" prefHeight="25.0" prefWidth="110.0" text="Log In" textAlignment="CENTER" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0"/>

        <Label layoutX="250" layoutY="320" text="Don't have an account?" />
        <Button layoutY="340.0" fx:id="btnSignUp" mnemonicParsing="false" onAction="#onSignUpButtonCLick" prefHeight="20.0" prefWidth="110.0" text="Sign Up" textAlignment="CENTER" AnchorPane.leftAnchor="270.0" AnchorPane.rightAnchor="270.0"/>
    </children>

</AnchorPane>
